{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/course-spec.schema.json",
  "title": "CourseSpec",
  "description": "Schema for course specification parsed from index document",
  "type": "object",
  "required": ["courseName", "level", "objective", "modules"],
  "properties": {
    "courseName": {
      "type": "string",
      "description": "Name of the course",
      "minLength": 1
    },
    "level": {
      "type": "string",
      "enum": ["b√°sico", "intermedio", "avanzado", "basic", "intermediate", "advanced"],
      "description": "Course difficulty level"
    },
    "objective": {
      "type": "string",
      "description": "Main objective of the course"
    },
    "targetAudience": {
      "type": "string",
      "description": "Description of target audience"
    },
    "modules": {
      "type": "array",
      "description": "List of modules in the course",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/module"
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata",
      "properties": {
        "sourceFileId": {
          "type": "string",
          "description": "Google Drive file ID of the source index"
        },
        "parsedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the index was parsed"
        }
      }
    }
  },
  "definitions": {
    "module": {
      "type": "object",
      "required": ["moduleNumber", "moduleName", "topics"],
      "properties": {
        "moduleNumber": {
          "type": "integer",
          "minimum": 0,
          "description": "Module number (0 for intro/welcome modules)"
        },
        "moduleName": {
          "type": "string",
          "description": "Name/title of the module",
          "minLength": 1
        },
        "moduleResult": {
          "type": "string",
          "description": "Expected result/outcome of completing the module"
        },
        "topics": {
          "type": "array",
          "description": "List of topics in the module",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/topic"
          }
        }
      }
    },
    "topic": {
      "type": "object",
      "required": ["topicNumber", "topicName"],
      "properties": {
        "topicNumber": {
          "type": "string",
          "description": "Topic number (e.g., '1.1', '2.3')",
          "pattern": "^[0-9]+\\.?[0-9]*$"
        },
        "topicName": {
          "type": "string",
          "description": "Name/title of the topic",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "description": "Brief description or notes about the topic"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "generating", "completed", "failed"],
          "default": "pending",
          "description": "Generation status for resume capability"
        },
        "generatedDocs": {
          "type": "object",
          "description": "IDs of generated documents",
          "properties": {
            "topicIndexId": {
              "type": "string"
            },
            "topicDevelopmentId": {
              "type": "string"
            },
            "voiceoverScriptId": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
