# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Service Account credentials file path
GOOGLE_APPLICATION_CREDENTIALS=./credentials/service-account.json

# Root folder ID in Google Drive where courses will be created
ROOT_FOLDER_ID=your-google-drive-folder-id

# Optional: Prompts folder ID (if prompts are loaded from Drive)
PROMPTS_FOLDER_ID=your-prompts-folder-id

# Concurrency settings
MAX_CONCURRENT_TOPICS=3

# Generation mode: 'course' or 'module'
DEFAULT_MODE=course
